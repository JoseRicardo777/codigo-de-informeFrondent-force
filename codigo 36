'use client'

import { useProductSearch } from '@/hooks/useProductSearch'

export function SearchBar() {
  const {
    query,
    setQuery,
    filters,
    setFilters,
    results,
    isLoading,
    hasResults
  } = useProductSearch()
  
  return (
    <div className="relative">
      {/* Input de búsqueda */}
      <div className="relative">
        <SearchIcon className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 h-5 w-5" />
        <input
          type="text"
          value={query}
          onChange={(e) => setQuery(e.target.value)}
          placeholder="Buscar componentes... (mínimo 3 caracteres)"
          className="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
        />
        
        {isLoading && (
          <LoadingSpinner className="absolute right-3 top-1/2 transform -translate-y-1/2" />
        )}
      </div>
      
      {/* Resultados en tiempo real */}
      {hasResults && (
        <div className="absolute top-full left-0 right-0 bg-white border border-gray-200 rounded-lg shadow-lg mt-1 max-h-96 overflow-y-auto z-50">
          {results.map(product => (
            <SearchResultItem 
              key={product.id} 
              product={product}
              onClick={() => setQuery('')}
            />
          ))}
        </div>
      )}
      
      {/* Filtros avanzados */}
      <ProductFilters 
        filters={filters}
        onChange={setFilters}
        className="mt-4"
      />
    </div>
  )
}
