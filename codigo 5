// Ejemplo: Componente con responsabilidad Ãºnica
function ProductPrice({ price, discount }: { price: number; discount?: number }) {
  const finalPrice = discount ? price * (1 - discount / 100) : price;
  
  return (
    <div className="flex items-center gap-2">
      <span className="text-2xl font-bold">Bs. {finalPrice.toFixed(2)}</span>
      {discount && (
        <span className="text-sm text-gray-500 line-through">Bs. {price.toFixed(2)}</span>
      )}
    </div>
  );
}
