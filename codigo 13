CREATE TABLE pcs_armadas (
  id_pc SERIAL PRIMARY KEY,
  nombre_pc VARCHAR(255) NOT NULL,
  descripcion TEXT,
  gama VARCHAR(20) NOT NULL CHECK (gama IN ('Baja', 'Media', 'Alta', 'Extrema')),
  precio_total_bs DECIMAL(10,2) NOT NULL CHECK (precio_total_bs > 0),
  imagen_url VARCHAR(500),
  componentes JSONB NOT NULL, -- {componente_id: cantidad}
  created_at TIMESTAMPTZ DEFAULT NOW()
);

-- √çndices para PCs armadas
CREATE INDEX idx_pcs_gama ON pcs_armadas(gama);
CREATE INDEX idx_pcs_precio ON pcs_armadas(precio_total_bs);
